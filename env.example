TELEGRAM_BOT_TOKEN=123456:ABCDEF...

# Публичный URL приложения в Timeweb App Platform (после деплоя)
PUBLIC_BASE_URL=https://your-app-domain.example

# Секрет в URL пути вебхука (любая строка), например: 9f3d0d7c...
TELEGRAM_WEBHOOK_PATH_SECRET=change-me

# Секретный токен Telegram для заголовка X-Telegram-Bot-Api-Secret-Token (любая строка)
TELEGRAM_WEBHOOK_SECRET_TOKEN=change-me-too

# (опционально) ограничить бота каналами
# TELEGRAM_ALLOWED_CHANNEL_ID=-1001234567890
# TELEGRAM_ALLOWED_CHANNEL_IDS=-1001234567890,-1009876543210

# Postgres
# DATABASE_URL=postgresql://user:pass@host:5432/dbname
# DATABASE_HOST=localhost
# DATABASE_NAME=dbname
# DATABASE_USER=user
# DATABASE_PASSWORD=pass
# DATABASE_PORT=5432

# Timeweb AI (OpenAI-совместимый endpoint ожидается на /v1/chat/completions)
TIMEWEB_AI_BASE_URL=https://api.timeweb.cloud
TIMEWEB_AI_CHAT_PATH=/v1/chat/completions
TIMEWEB_AI_API_KEY=your-timeweb-ai-key
TIMEWEB_AI_MODEL=your-agent-or-model-id
TIMEWEB_AI_TIMEOUT_S=30
# (опционально) если модель поддерживает temperature
# TIMEWEB_AI_TEMPERATURE=1
# (опционально) если агент/модель не поддерживает vision — выключите картинку
# TIMEWEB_AI_SEND_IMAGE=false
# (опционально) лимит генерации (некоторые модели требуют большего значения)
# TIMEWEB_AI_MAX_COMPLETION_TOKENS=256
# (опционально) использовать подпись поста как контекст
# TIMEWEB_AI_USE_POST_CAPTION=true
# (опционально) доля emoji-реакций (0.0..1.0)
# TIMEWEB_AI_EMOJI_RATIO=0.3

# Daily poll (опрос раз в день)
# DAILY_POLL_ENABLED=false
# DAILY_POLL_TIMEZONE=Europe/Moscow
# DAILY_POLL_START_HOUR=13
# DAILY_POLL_END_HOUR=17
# DAILY_POLL_MIN_POSTS=3
# DAILY_POLL_OPTIONS_COUNT=4
# DAILY_POLL_OPEN_SECONDS=0
# 0 (или отсутствие переменной) — опрос бессрочный
# DAILY_POLL_QUESTIONS=Что тут происходит?|Что делать дальше?|Какой следующий шаг?
# Сейчас вопрос генерируется AI по картинке (переменная не используется)
# DAILY_POLL_CHANNEL_IDS=-1001234567890,-1009876543210

# Admin UI (Basic Auth)
# ADMIN_BASIC_USER=admin
# ADMIN_BASIC_PASSWORD=strongpassword
